<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>helloWorld</servlet-name>
        <servlet-class>com.rydzwr.secondtask.HelloWorld</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>helloWorld</servlet-name>
        <url-pattern>/hello.world</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ParamFilter</filter-name>
        <filter-class>com.rydzwr.secondtask.ParamFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ParamFilter</filter-name>
        <url-pattern>/hello.world</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>FooFilter</filter-name>
        <filter-class>com.rydzwr.secondtask.FooFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>FooFilter</filter-name>
        <url-pattern>/foo.world</url-pattern>
    </filter-mapping>
</web-app>